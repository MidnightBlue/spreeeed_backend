  });
</script>
<% end %>

<script type="text/javascript">

function set_duration(css_class) {
  $('.' + css_class).daterangepicker({
    format:    'YYYY/MM/DD',
    startDate: '<%= Time.zone.now.strftime("%Y/%m") %>/01',
    endDate:   '<%= Time.zone.now.year %>/12/31',
  },
  function(start, end, label) {
    $('#order_started_at').val(start.format('YYYY/MM/DD'));
    $('#order_ended_at').val(end.format('YYYY/MM/DD'));
  });
}
</script>

<script type="text/javascript">
  $(document).ready(function() {
      $("input[class*='boolean']").bootstrapSwitch();

      $(".datetime").datetimepicker({
        autoclose: true,
        language: 'zh-TW',
      });

      $('.bslider').slider();

      $('.icheck').iCheck({
        checkboxClass: 'icheckbox_flat-green',
        radioClass: 'iradio_flat-green'
      });

  });
</script>
